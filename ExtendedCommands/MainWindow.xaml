<Window x:Class="ExtendedCommands.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ExtendedCommands"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.CommandBindings>
        <CommandBinding Command="{x:Static local:DataCommand.Requery}" CanExecute="RequeryCommand_CanExecuted" Executed="RequeryCommand_Executed"></CommandBinding>
    </Window.CommandBindings>
    <Grid>
        <Button Width="100" Height="100" Command="{x:Static local:DataCommand.Requery}">Requery</Button>
    </Grid>
</Window>
